@page
@model ServiceHost.Areas.Adminpanel.Pages.ToDo.Tasks.IndexModel
@{
    Layout = "Shared/_DashboardLayout";
    ViewData["Title"] = "Tasks";
}

@if (User.Identity?.IsAuthenticated == true)
{
    <div class="d-flex justify-content-between align-items-center mb-3">
        <div>
            <h2 class="fw-bold text-dark mb-0">
                <i class="bi bi-card-checklist me-2"></i>Tasks
            </h2>
            <small class="text-muted">Manage and track your task items</small>
        </div>
        <a class="btn btn-success" href="#showmodal=@Url.Page("./Index", "Create")">
            <i class="bi bi-plus-circle"></i> Add Task
        </a>
    </div>
}
else
{
    <p class="text-danger">Please log in to see your tasks.</p>
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <div>
        <h2 class="fw-bold text-dark mb-0">
            <i class="bi bi-card-checklist me-2"></i>Tasks
        </h2>
        <small class="text-muted">Manage and track your task items</small>
    </div>
    <a class="btn btn-success" href="#showmodal=@Url.Page("./Index", "Create")">
        <i class="bi bi-plus-circle"></i> Add Task
    </a>
</div>

<div class="card shadow-sm mb-4">
    <div class="card-header d-flex justify-content-between align-items-center bg-light">
        <h5 class="mb-0 text-secondary"><i class="bi bi-funnel me-2"></i>Search Tasks</h5>
        <button class="btn btn-sm btn-outline-secondary" type="button" data-bs-toggle="collapse" data-bs-target="#searchForm">
            <i class="bi bi-chevron-down"></i>
        </button>
    </div>
    <div class="collapse show" id="searchForm">
        <div class="card-body">
            <form method="get" class="row g-3 align-items-end">
                <div class="col-md-4">
                    <input asp-for="SearchModel.Title" class="form-control" placeholder="Task Title" />
                </div>
                <div class="col-md-4">
                    <select asp-for="SearchModel.TaskListId" asp-items="Model.TaskViewModel" class="form-select">
                        <option value="0">Task List Name</option>
                    </select>
                </div>
                <div class="col-md-4">
                    <select asp-for="SearchModel.IsDone" class="form-select">
                        <option value="0">Status</option>
                        <option value="">🔍 All</option>
                        <option value="true">✔ Done</option>
                        <option value="false">✖ Active</option>
                    </select>
                </div>

                <div class="col-md-auto">
                    <button type="submit" class="btn btn-success">
                        <i class="bi bi-search"></i> Search
                    </button>
                    <a asp-page="./Index" class="btn btn-outline-primary ms-2">
                        <i class="bi bi-arrow-clockwise"></i> View All
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Configuration Card -->
<div class="card shadow-sm mb-4">
    <div class="card-header bg-light">
        <h5 class="mb-0 text-secondary"><i class="bi bi-gear me-2"></i>Configuration</h5>
    </div>
    <div class="card-body d-flex align-items-center">
        <label for="viewModeSelector" class="form-label me-3 mb-0">Display Mode:</label>
        <select id="viewModeSelector" class="form-select form-select-sm" style="width: 180px;">
            <option value="icon">Icon ✔ / ✖</option>
            <option value="checkbox">Checkbox</option>
        </select>
    </div>
</div>


<div class="card shadow-sm">

    <div class="card-header bg-light">
        <h5 class="mb-0">
            <i class="bi bi-list-task me-2"></i>Task List
            <span class="badge bg-primary ms-2">@Model.TaskItems.Count</span>
        </h5>
    </div>

    <div class="card-body">

        <div id="taskTableContainer">
            @await Html.PartialAsync("_TaskTable", Model.TaskItems)
        </div>

    </div>

    <div class="card-footer">
        <nav id="paginationNav" class="mt-3" data-current-page="@Model.TaskItems.PageIndex">
            <ul class="pagination justify-content-center">
                @if (Model.TaskItems.HasPreviousPage)
                {
                    <li class="page-item">
                        <a class="page-link pagination-link" href="?pageIndex=@(Model.TaskItems.PageIndex - 1)">Previous</a>
                    </li>
                }
                @for (int i = 1; i <= Model.TaskItems.TotalPages; i++)
                {
                    <li class="page-item @(i == Model.TaskItems.PageIndex ? "active" : "")">
                        <a class="page-link pagination-link" href="?pageIndex=@i">@i</a>
                    </li>
                }
                @if (Model.TaskItems.HasNextPage)
                {
                    <li class="page-item">
                        <a class="page-link pagination-link" href="?pageIndex=@(Model.TaskItems.PageIndex + 1)">Next</a>
                    </li>
                }
            </ul>
        </nav>
    </div>

</div>


<form id="antiForgeryForm" style="display:none">
    @Html.AntiForgeryToken()
</form>

