@model CreateTask
@{
}


<div class="modal fade" id="modal-placeholder" tabindex="-1" role="dialog" aria-labelledby="createModalLabel">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Add New Task</h4>
                <button type="button" class="close" data-dismiss="modal-placeholder" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form asp-page="./Index" asp-page-handler="Create"
                  method="post"
                  data-ajax="true"
                  data-callback="refreshList"
                  data-action="Refresh"
                  enctype="multipart/form-data">
                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Title" class="control-label">Title</label>
                                <input type="text" class="form-control" asp-for="Title" />
                                <span asp-validation-for="Title" class="error"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group form-check">
                                <input type="checkbox" class="form-check-input" asp-for="IsDone">
                                <label asp-for="IsDone" class="form-check-label">Is Done?</label>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label asp-for="TaskListId" class="control-label">Task List</label>
                                <select class="form-control" asp-for="TaskListId"
                                        asp-items='new SelectList(Model.TaskList, "Id", "Name")'>
                                    <option value="">فهرست وظایف</option>
                                </select>
                                <span asp-validation-for="TaskListId" class="error"></span>
                            </div>
                        </div>
                    </div>

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default waves-effect" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-info">Create</button>
                </div>
            </form>
        </div>
    </div>
</div>
