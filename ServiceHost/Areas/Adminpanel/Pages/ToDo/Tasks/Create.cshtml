@using ServiceHost.Areas.Adminpanel.Pages.ToDo.Tasks.ViewModels
@model CreateTaskViewModel
@{
    ViewData["Title"] = "Add New Task";
}

<div class="modal-header">
    <h4 class="modal-title">@ViewData["Title"]</h4>
    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
</div>

<form asp-page="./Index" asp-page-handler="Create"
      method="post"
      data-ajax="true"
      data-callback=""
      data-action="Refresh"
      enctype="multipart/form-data">
    <div class="modal-body">
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="Task.Title"></label>
                    <input asp-for="Task.Title" class="form-control" />
                    <span asp-validation-for="Task.Title" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="Task.TaskListId"></label>
                    <select asp-for="Task.TaskListId" asp-items="@(new SelectList(Model.TaskLists, "Id", "Name"))" class="form-control">
                        <option value="TaskListId">Select Task List</option>
                    </select>
                    <span asp-validation-for="Task.TaskListId" class="text-danger"></span>
                </div>
            </div>
        </div>
    </div>

    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <button type="submit" class="btn btn-primary">Create</button>
    </div>
</form>
